<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="fill_parent" 
         android:layout_height="fill_parent">
  <RelativeLayout android:layout_width="fill_parent"
    	android:layout_height="40dp"
    	android:background="@drawable/navigation_bar_top">
    	<TextView android:id="@+id/albums_activity_btn_back"
    		android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="5dp"
	    	android:text="Back"
	    	android:textStyle="bold"
	    	android:gravity="center_vertical"
	    	android:layout_centerVertical="true"
	    	android:textColor="@xml/btn_back_selector"
	    	android:background="@xml/btn_back_selector">
    	</TextView>
    	<TextView android:id="@+id/albums_activity_txt_title"
    		android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/app_name"
	    	android:textColor="@color/color_white"
	    	android:textSize="15dp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:layout_centerHorizontal="true"
	    	android:layout_centerVertical="true"/>
    </RelativeLayout>           
  	<LinearLayout android:id="@+id/buttonLayout"
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" >
		
		
		<Button android:id="@+id/SelectAll"
	        android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_weight="0.16"
			android:layout_margin="1dp" 
		    android:textSize="13dp"
			android:text="Select All" 
			android:textStyle="bold"
			/>	
	
		<Button android:id="@+id/CollapseAll"
			android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp"  
			android:layout_weight="0.16"
		    android:textSize="13dp"
		    android:textStyle="bold"
			android:text="Collapse All" />	
		
		<Button android:id="@+id/ExpandAll"
		    android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp" 
			android:layout_weight="0.16"
		    android:textSize="13dp"
		    android:textStyle="bold"
			android:text="Expand All" />	
	   <Button android:id="@+id/Sorting"
		    android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp" 
			android:layout_weight="0.16"
		    android:textSize="12dp"
		    android:textStyle="bold"
			android:text="Sort" />	
 	</LinearLayout>

     <ExpandableListView android:id="@+id/android:list"
               android:layout_width="fill_parent" 
               android:layout_height="338dp">
                   <requestFocus />
     </ExpandableListView>
     	<LinearLayout 
 	    android:id="@+id/buttonLayout"
		android:orientation="horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true" >
	<Button 
		    android:id="@+id/ForwardFunction"
		    android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp" 
			android:layout_weight="0.16"
		    android:textSize="15dp" 
		    android:textStyle="bold"					
			android:text="Forward" />	
	<Button 
	        android:id="@+id/DoneFunction"
	         android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp" 
			android:layout_weight="0.16"
		    android:textSize="15dp"		 
		    android:textStyle="bold"
			android:text="Return" />
	<Button 
	        android:id="@+id/CancelFunction"
	        android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp" 
			android:layout_weight="0.16"
		    android:textSize="15dp"	   	
		    android:textStyle="bold"   
			android:text="Join" />	
 	</LinearLayout>   
</LinearLayout>
