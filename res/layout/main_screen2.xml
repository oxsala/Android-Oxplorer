<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="fill_parent" 
         android:layout_height="fill_parent">
       
  <RelativeLayout android:layout_width="fill_parent"
    	android:layout_height="40dp"
    	android:background="@drawable/navigation_bar_top">
    	<TextView android:id="@+id/albums_activity_btn_back"
    		android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="5dp"
	    	android:text="Back"
	    	android:textStyle="bold"
	    	android:gravity="center_vertical"
	    	android:layout_centerVertical="true"
	    	android:textColor="@xml/btn_back_selector"
	    	android:background="@xml/btn_back_selector">
    	</TextView>
    	<TextView android:id="@+id/albums_activity_txt_title"
    		android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/app_name"
	    	android:textColor="@color/color_white"
	    	android:textSize="15dp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:layout_centerHorizontal="true"
	    	android:layout_centerVertical="true"/>
    </RelativeLayout>           
  	<LinearLayout android:id="@+id/buttonLayout"
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" >
		
		
		<Button android:id="@+id/SelectAllButton"
	        android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_weight="0.16"
			android:layout_margin="1dp" 
		    android:textSize="10sp"
			android:text="Select All" 
			android:textStyle="bold"
			/>	
	
		<Button android:id="@+id/CollapseAll"
			android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp"  
			android:layout_weight="0.16"
		    android:textSize="10sp"
		    android:textStyle="bold"
			android:text="Collapse All" />	
		
		<Button android:id="@+id/ExpandAll"
		    android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp" 
			android:layout_weight="0.16"
		    android:textSize="10sp"
		    android:textStyle="bold"
			android:text="Expand All" />	
	   <Button android:id="@+id/Sorting"
		    android:layout_width="wrap_content" 
			android:layout_height="38dp"
			android:layout_margin="1dp" 
			android:layout_weight="0.16"
		    android:textSize="10sp"
		    android:textStyle="bold"
			android:text="Sort" />	
 	</LinearLayout>
 	<RelativeLayout
 	    android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
  <ProgressBar android:id="@+id/progress_bar"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerInParent="true"/>
		</RelativeLayout>
     <ExpandableListView android:id="@+id/android:list"
               android:layout_width="fill_parent" 
               android:layout_height="wrap_content"
                android:layout_weight="1">
                   <requestFocus />
     </ExpandableListView>
    <LinearLayout
        style="@android:style/ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	<Button 
		    android:id="@+id/ForwardFunction"
		    android:layout_width="110dp" 
			android:layout_height="40dp"

		    android:textSize="15dp" 
		    android:textStyle="bold"					
			android:text="Forward" />	
	<Button 
	        android:id="@+id/DoneFunction"
	        android:layout_width="110dp"  
			android:layout_height="40dp"
		    android:textSize="15dp"		 
		    android:textStyle="bold"
		    android:layout_toRightOf="@id/ForwardFunction"
			android:text="Return" />
	<Button 
	        android:id="@+id/CancelFunction"
	        android:layout_width="110dp" 
		 	android:layout_height="40dp"
		    android:layout_alignParentBottom="true"
		    android:textSize="15dp"	   	
		    android:textStyle="bold"   
			android:text="Join" />	
    </LinearLayout>

</LinearLayout>
